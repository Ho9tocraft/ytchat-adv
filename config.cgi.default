  { '\[([△]|準備?|備)\]' => '<i class="s-icon setup">[準]</i>' },
  { '\[([＞▶〆]|主(動作)?)\]' => '<i class="s-icon major">[主]</i>' },
  { '\[([☆≫»]|>>|補(助(動作)?)?)\]' => '<i class="s-icon minor">[補]</i>' },
  { '\[([□☑🗨]|宣言?)\]' => '<i class="s-icon active">[宣]</i>' },
  
  # '置換前の文字列' => '置換後の文字列',
);

